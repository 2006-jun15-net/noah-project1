@model StoreApp.Library.Model.Store
@{
    ViewData["Title"] = "Products";
}

<div class="form-group">
    <h2>@Model.Name</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Inventory.Keys)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @Model.Inventory[item]
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div>
    <form asp-action="GetProducts" method="post" asp-route-StoreId="@Model.StoreId">
        <div class="form-group">
            <label>Product<select name="ProductId" asp-items="@(new SelectList(Model.Inventory.Keys,"ProductId","Name"))"></select></label>
            <label for="qty">Qty</label>
            <input type="text" name="qty" required />
            <input type="submit" value="Add" />
        </div>
    </form>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
<div>
    <h2>Order</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Qty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Inventory.Keys)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @TempData.Peek(item.Name); 
                    </td>
                </tr>
            }        
        </tbody>
        <tfoot>
            <tr>
                <th>
                    Total Cost
                </th>
                <th>
                    @ViewData["Total"]
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>
<div>
    <form asp-action="PlaceOrder" method="post">
        @Html.Hidden("StoreId")
        <input type="submit" value="View Cart"/>
    </form>
</div>
<div>
    <a asp-controller="Order" asp-action="GetLocation" asp-route-StoreId="@Model.StoreId">back</a>
    <a asp-Controller="Home" asp-action="Index">Home</a>
</div>
