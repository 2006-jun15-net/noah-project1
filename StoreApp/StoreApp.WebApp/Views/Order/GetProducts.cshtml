@model StoreApp.Library.Model.Store
@{
    ViewData["Title"] = "Products";
}

<div class="form-group">
    <h2>@Model.Name</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Inventory.Keys)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @Model.Inventory[item]
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div>
    <form asp-action="GetProducts">
        <div class="form-group">
            <select asp-items="@(new SelectList(Model.Inventory.Keys,"ProductId","Name"))"></select>
            <input type="submit" />
        </div>
    </form>
</div>
