@model StoreApp.WebApp.ViewModels.StoreViewModel
@{
    ViewData["Title"] = "LocationOrderHistory";
}

<h1>LocationOrderHistory</h1>
<h1>Select a Location</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="LocationOrderHistory" method="post">
            <div class="form-group">
                <select asp-for="StoreId" asp-items="@(new SelectList(@ViewBag.locations,"StoreId","Name"))"></select>
                <input type="submit" />
            </div>
        </form>
    </div>

</div>
<div>
    @{
        @if(Model.OrderHistory != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            OrderId
                        </th>
                        <th>
                            Customer
                        </th>
                        <th>
                            Location
                        </th>
                        <th>
                            Order Date
                        </th>
                        <th>
                            Total Cost
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderHistory)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerUsername)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalCost)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { item.OrderId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }

</div>
