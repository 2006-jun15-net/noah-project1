@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Store Application</h1>
    <div id="HomeMenu">
        <table class="table">
           <tr>
               <td>Register as a new customer</td>
               <td><a asp-controller = "Customer" asp-action ="RegisterCustomer">Register</a></td>
           </tr> 
            <tr>
                <td>Sign In</td>
                <td><a asp-controller="Customer" asp-action="Search">Search</a></td>
            </tr>
            <tr>
                <td>Place an order</td>
                <td><a asp-controller="Order" asp-action="GetLocation">Order</a></td>
            </tr>
            <tr>
                <td>Customer Order History</td>
                <td><a asp-controller="Order" asp-action="OrderHistory" asp-route-username="@TempData.Peek("Customer")">View</a></td>
            </tr>
            <tr>
                <td>Location History</td>
                <td><a asp-controller="Order" asp-action="LocationOrderHistory">View</a></td>
            </tr>
        </table>
    </div>
</div>

